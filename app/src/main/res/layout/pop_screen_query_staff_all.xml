<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <!--是否购买社保-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:text="是否购买社保"
        android:textColor="@color/colorMiddle"
        android:textSize="13sp" />

    <com.rainwood.oa.ui.widget.MeasureGridView
        android:id="@+id/mgv_social"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:horizontalSpacing="10dp"
        android:paddingStart="15dp"
        android:paddingTop="10dp"
        android:paddingEnd="13dp"
        android:paddingBottom="10dp"
        android:verticalSpacing="12dp" />

    <!-- 是否有大门钥匙-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:text="是否有办公室钥匙"
        android:textColor="@color/colorMiddle"
        android:textSize="13sp" />

    <com.rainwood.oa.ui.widget.MeasureGridView
        android:id="@+id/mgv_gate_key"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:horizontalSpacing="10dp"
        android:paddingStart="15dp"
        android:paddingTop="20dp"
        android:paddingEnd="13dp"
        android:paddingBottom="10dp"
        android:verticalSpacing="12dp" />

    <View
        style="@style/HorizontalLineStyle"
        android:layout_marginTop="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_clear_screen"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="@color/white"
            android:gravity="center"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:text="@string/common_text_clear_screen"
            android:textColor="@color/colorMiddle" />

        <TextView
            android:id="@+id/tv_confirm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:text="@string/common_confirm"
            android:textColor="@color/white" />

    </LinearLayout>

    <View
        android:id="@+id/mask_layer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#4C4C4C" />

</LinearLayout>