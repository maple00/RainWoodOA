<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_item_reissue"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingStart="15dp"
    android:paddingTop="20dp"
    android:paddingEnd="15dp"
    tools:ignore="UselessParent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/fontColor"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="草稿"
            android:textColor="@color/tipsColor"
            android:textSize="13sp" />

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:text="2020.03.25 09:00"
        android:textColor="@color/fontColor"
        android:textSize="14sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="20dp">

        <TextView
            android:id="@+id/tv_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:background="@drawable/selector_edit_button"
            android:paddingStart="18dp"
            android:paddingTop="9dp"
            android:paddingEnd="18dp"
            android:paddingBottom="9dp"
            android:text="@string/text_edit"
            android:textColor="@color/colorPrimary"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15dp"
            android:layout_toStartOf="@+id/tv_edit"
            android:background="@drawable/selector_delete_button"
            android:paddingStart="18dp"
            android:paddingTop="9dp"
            android:paddingEnd="18dp"
            android:paddingBottom="9dp"
            android:text="@string/common_delete"
            android:textColor="@color/fontColor"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="20dp"
            android:layout_toStartOf="@+id/tv_delete"
            android:gravity="bottom"
            android:singleLine="true"
            android:text="下午4点出发到大足鑫发集团沟通详细的需求，所以未打大足鑫发集团沟通详细的需求，下"
            android:textColor="@color/labelColor"
            android:textSize="13sp" />

    </RelativeLayout>

    <View style="@style/HorizontalLineStyle" />

</LinearLayout>