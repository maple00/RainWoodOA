<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_item_order"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingStart="15dp"
    android:paddingTop="20dp"
    android:paddingEnd="15dp"
    android:paddingBottom="15dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp">

        <TextView
            android:id="@+id/tv_order_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="订单号：6345001937"
            android:textColor="@color/labelColor"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_order_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:text="草稿"
            android:textColor="@color/tipsColor" />

    </RelativeLayout>

    <View style="@style/HorizontalLineStyle" />

    <TextView
        android:id="@+id/tv_order_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="正南齐北科技制造业ERP正南齐北科技制造业ERP正南齐北"
        android:textColor="@color/fontColor"
        android:textSize="17sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_order_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="￥50000.00"
        android:textColor="@color/red10"
        android:textSize="14sp"
        android:textStyle="bold" />

    <!-- 订单的属性值，-->
    <com.rainwood.oa.ui.widget.MeasureGridView
        android:id="@+id/mgv_order_values"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:layout_marginBottom="20dp"
        android:verticalSpacing="16dp"
        android:horizontalSpacing="16dp" />

    <TextView
        android:id="@+id/tv_order_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:background="@drawable/shape_date_orange_bg"
        android:paddingStart="7dp"
        android:paddingTop="4dp"
        android:paddingEnd="6dp"
        android:paddingBottom="5dp"
        android:text="12天 | 2020.04.10-2020.04.22"
        android:textColor="@color/orange5"
        android:textSize="12sp" />

    <View style="@style/HorizontalLineStyle" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <Button
            android:id="@+id/btn_order_edit"
            style="@style/SecondaryButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:background="@drawable/selector_order_edit_button"
            android:text="@string/text_edit"
            android:textColor="@color/colorPrimary"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btn_order_delete"
            style="@style/SecondaryButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15dp"
            android:layout_toStartOf="@+id/btn_order_edit"
            android:background="@drawable/selector_order_delete_button"
            android:text="@string/common_delete"
            android:textColor="@color/fontColor"
            android:textSize="12sp" />


    </RelativeLayout>

</LinearLayout>