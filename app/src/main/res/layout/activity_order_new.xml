<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/include_title_bar_none_menu" />

    <View style="@style/HorizontalLineStyle" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingStart="15dp"
                android:paddingTop="25dp"
                android:paddingEnd="15dp"
                android:paddingBottom="10dp">

                <TextView
                    android:id="@+id/tv_custom_name"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorMiddle"
                    android:textSize="16sp" />

                <com.rainwood.tools.wheel.view.ClearEditText
                    android:id="@+id/cet_custom_name"
                    style="@style/EditTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/custom_input_please"
                    android:inputType="text"
                    android:singleLine="true"
                    android:textSize="16sp"
                    app:regexType="name" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingStart="15dp"
                android:paddingTop="10dp"
                android:paddingEnd="15dp"
                android:paddingBottom="10dp">

                <TextView
                    android:id="@+id/tv_order_name"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorMiddle"
                    android:textSize="16sp" />

                <com.rainwood.tools.wheel.view.ClearEditText
                    android:id="@+id/cet_order_name"
                    style="@style/EditTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/custom_input_please"
                    android:inputType="text"
                    android:singleLine="true"
                    android:textSize="16sp"
                    app:regexType="name" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingStart="15dp"
                android:paddingTop="10dp"
                android:paddingEnd="15dp"
                android:paddingBottom="10dp">

                <TextView
                    android:id="@+id/tv_money"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorMiddle"
                    android:textSize="16sp" />

                <com.rainwood.tools.wheel.view.ClearEditText
                    android:id="@+id/cet_money"
                    style="@style/EditTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/custom_input_please"
                    android:inputType="numberDecimal"
                    android:singleLine="true"
                    android:textSize="16sp"
                    app:regexType="count" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingStart="15dp"
                android:paddingTop="10dp"
                android:paddingEnd="15dp"
                android:paddingBottom="10dp">

                <TextView
                    android:id="@+id/tv_note"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorMiddle"
                    android:textSize="16sp" />

                <com.rainwood.tools.wheel.view.ClearEditText
                    android:id="@+id/cet_note"
                    style="@style/EditTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/custom_input_please"
                    android:inputType="text"
                    android:singleLine="true"
                    android:textSize="16sp" />

            </LinearLayout>

            <Button
                android:id="@+id/btn_next_step"
                style="@style/ButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="15dp"
                android:text="@string/text_next_step" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>