<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingStart="15dp"
    android:paddingTop="20dp"
    android:paddingEnd="15dp"
    android:paddingBottom="20dp"
    tools:ignore="ContentDescription">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp">

        <TextView
            android:id="@+id/tv_order_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="订单号：6345001937"
            android:textColor="@color/labelColor"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="开发中"
            android:textColor="@color/tipsColor"
            android:textSize="13sp" />

    </RelativeLayout>

    <View style="@style/HorizontalLineStyle" />

    <TextView
        android:id="@+id/tv_order_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:lineSpacingExtra="12dp"
        android:text="正南齐北科技制造业ERP"
        android:textColor="@color/fontColor"
        android:textSize="17sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_order_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="￥7800.00"
        android:textColor="@color/red10"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="13dp"
            android:layout_height="14dp"
            android:src="@drawable/ic_charge_man" />

        <TextView
            android:id="@+id/tv_charge_man"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="李雷"
            android:textColor="@color/fontColor"
            android:textSize="14sp" />

    </LinearLayout>

    <com.rainwood.oa.ui.widget.MeasureGridView
        android:id="@+id/mgv_order_nature"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:verticalSpacing="16dp"
        android:horizontalSpacing="15dp" />

    <LinearLayout
        android:id="@+id/ll_limit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_order_limit"
        android:gravity="center_vertical"
        android:paddingStart="7dp"
        android:paddingTop="4dp"
        android:paddingEnd="7dp"
        android:paddingBottom="4dp">

        <TextView
            android:id="@+id/tv_limit_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12天"
            android:textColor="@color/orange5"
            android:textSize="12sp" />

        <View
            android:layout_width="1dp"
            android:layout_height="10dp"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="5dp"
            android:background="@color/orange10" />

        <TextView
            android:id="@+id/tv_limit_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2020.04.10-2020.04.22"
            android:textColor="@color/orange5"
            android:textSize="12sp" />

    </LinearLayout>

</LinearLayout>