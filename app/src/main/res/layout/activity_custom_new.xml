<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:ignore="UselessLeaf,HardcodedText,ContentDescription">

    <include layout="@layout/include_title_bar" />

    <View style="@style/HorizontalLineStyle" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="20dp"
            android:paddingBottom="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:text="联系信息"
                android:textColor="@color/fontColor"
                android:textSize="16sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingStart="15dp"
                android:paddingTop="20dp"
                android:paddingEnd="15dp"
                android:paddingBottom="10dp">

                <TextView
                    android:id="@+id/tv_contact"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="联系人"
                    android:textColor="@color/colorMiddle"
                    android:textSize="16sp" />

                <com.rainwood.tools.wheel.view.ClearEditText
                    android:id="@+id/cet_contact"
                    style="@style/EditTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="请输入姓名"
                    android:inputType="text"
                    android:singleLine="true"
                    android:textSize="16sp"
                    app:regexType="name" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingStart="15dp"
                android:paddingTop="10dp"
                android:paddingEnd="15dp"
                android:paddingBottom="10dp">

                <TextView
                    android:id="@+id/tv_tel_number"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="手机号"
                    android:textColor="@color/colorMiddle"
                    android:textSize="16sp" />

                <com.rainwood.tools.wheel.view.ClearEditText
                    android:id="@+id/cet_tel_number"
                    style="@style/EditTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/custom_input_please"
                    android:inputType="phone"
                    android:singleLine="true"
                    android:textSize="16sp"
                    app:regexType="mobile" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingStart="15dp"
                android:paddingTop="10dp"
                android:paddingEnd="15dp"
                android:paddingBottom="10dp">

                <TextView
                    android:id="@+id/tv_wx_number"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="微信号"
                    android:textColor="@color/colorMiddle"
                    android:textSize="16sp" />

                <com.rainwood.tools.wheel.view.ClearEditText
                    android:id="@+id/cet_wxNumber"
                    style="@style/EditTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/custom_input_please"
                    android:inputType="text"
                    android:singleLine="true"
                    android:textSize="16sp"
                    app:regexType="name" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingStart="15dp"
                android:paddingTop="10dp"
                android:paddingEnd="15dp"
                android:paddingBottom="10dp">

                <TextView
                    android:id="@+id/tv_qq_number"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="QQ号"
                    android:textColor="@color/colorMiddle"
                    android:textSize="16sp" />

                <com.rainwood.tools.wheel.view.ClearEditText
                    android:id="@+id/cet_qqNumber"
                    style="@style/EditTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/custom_input_please"
                    android:inputType="number"
                    android:singleLine="true"
                    android:textSize="16sp"
                    app:regexType="count" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingStart="15dp"
                android:paddingTop="10dp"
                android:paddingEnd="15dp"
                android:paddingBottom="10dp">

                <TextView
                    android:id="@+id/tv_post"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="职位"
                    android:textColor="@color/colorMiddle"
                    android:textSize="16sp" />

                <com.rainwood.tools.wheel.view.ClearEditText
                    android:id="@+id/cet_post"
                    style="@style/EditTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/custom_input_please"
                    android:inputType="text"
                    android:singleLine="true"
                    android:textSize="16sp"
                    app:regexType="nonnull" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/assistColor10" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="20dp"
                android:text="客户需求"
                android:textColor="@color/fontColor"
                android:textSize="16sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingStart="15dp"
                android:paddingTop="10dp"
                android:paddingEnd="15dp"
                android:paddingBottom="10dp">

                <TextView
                    android:id="@+id/tv_follow_status"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="跟进状态"
                    android:textColor="@color/colorMiddle"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_follow_status_content"
                    style="@style/EditTextStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="@string/custom_choose_please"
                    android:singleLine="true"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="5dp"
                    android:layout_height="9dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_right_arrow" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingStart="15dp"
                android:paddingTop="10dp"
                android:paddingEnd="15dp"
                android:paddingBottom="10dp">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="客户来源"
                    android:textColor="@color/colorMiddle"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_custom_origin"
                    style="@style/EditTextStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="@string/custom_choose_please"
                    android:singleLine="true"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="5dp"
                    android:layout_height="9dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_right_arrow" />

            </LinearLayout>

            <com.rainwood.tools.wheel.view.ClearEditText
                android:id="@+id/cet_custom_origin_note"
                style="@style/EditTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="105dp"
                android:layout_marginEnd="15dp"
                android:hint="请输入备注"
                android:singleLine="true"
                android:textSize="16sp"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingStart="15dp"
                android:paddingTop="10dp"
                android:paddingEnd="15dp"
                android:paddingBottom="10dp">

                <TextView
                    android:id="@+id/tv_budget"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="预算(元)"
                    android:textColor="@color/colorMiddle"
                    android:textSize="16sp" />

                <com.rainwood.tools.wheel.view.ClearEditText
                    android:id="@+id/cet_budget"
                    style="@style/EditTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/custom_input_please"
                    android:inputType="numberDecimal"
                    android:singleLine="true"
                    android:textSize="16sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingStart="15dp"
                android:paddingTop="10dp"
                android:paddingEnd="15dp"
                android:paddingBottom="10dp">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="所在行业"
                    android:textColor="@color/colorMiddle"
                    android:textSize="16sp" />

                <com.rainwood.tools.wheel.view.ClearEditText
                    android:id="@+id/cet_industry"
                    style="@style/EditTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/custom_input_please"
                    android:singleLine="true"
                    android:textSize="16sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingStart="15dp"
                android:paddingTop="10dp"
                android:paddingEnd="15dp"
                android:paddingBottom="10dp">

                <TextView
                    android:id="@+id/tv_demand_detail"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="需求详情"
                    android:textColor="@color/colorMiddle"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_demand_detail_content"
                    style="@style/EditTextStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="@string/custom_input_please"
                    android:singleLine="true"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="5dp"
                    android:layout_height="9dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_right_arrow" />
            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/assistColor10" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="20dp"
                android:text="开票信息"
                android:textColor="@color/fontColor"
                android:textSize="16sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingStart="15dp"
                android:paddingTop="10dp"
                android:paddingEnd="15dp"
                android:paddingBottom="10dp">

                <TextView
                    android:id="@+id/tv_company_name"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="公司名称"
                    android:textColor="@color/colorMiddle"
                    android:textSize="16sp" />

                <com.rainwood.tools.wheel.view.ClearEditText
                    android:id="@+id/cet_company_name"
                    style="@style/EditTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/custom_input_please"
                    android:inputType="text"
                    android:singleLine="true"
                    android:textSize="16sp"
                    app:regexType="name" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingStart="15dp"
                android:paddingTop="10dp"
                android:paddingEnd="15dp"
                android:paddingBottom="10dp">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="税号"
                    android:textColor="@color/colorMiddle"
                    android:textSize="16sp" />

                <com.rainwood.tools.wheel.view.ClearEditText
                    android:id="@+id/cet_tax_num"
                    style="@style/EditTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="请输入纳税人识别号"
                    android:inputType="number"
                    android:singleLine="true"
                    android:textSize="16sp"
                    app:regexType="count" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingStart="15dp"
                android:paddingTop="10dp"
                android:paddingEnd="15dp"
                android:paddingBottom="10dp">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="邮寄地址"
                    android:textColor="@color/colorMiddle"
                    android:textSize="16sp" />

                <com.rainwood.tools.wheel.view.ClearEditText
                    android:id="@+id/cet_mailing_address"
                    style="@style/EditTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/custom_input_please"
                    android:singleLine="true"
                    android:textSize="16sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingStart="15dp"
                android:paddingTop="10dp"
                android:paddingEnd="15dp"
                android:paddingBottom="10dp">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="开票地址"
                    android:textColor="@color/colorMiddle"
                    android:textSize="16sp" />

                <com.rainwood.tools.wheel.view.ClearEditText
                    android:id="@+id/cet_billing_address"
                    style="@style/EditTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/custom_input_please"
                    android:singleLine="true"
                    android:textSize="16sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingStart="15dp"
                android:paddingTop="10dp"
                android:paddingEnd="15dp"
                android:paddingBottom="10dp">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="公司座机"
                    android:textColor="@color/colorMiddle"
                    android:textSize="16sp" />

                <com.rainwood.tools.wheel.view.ClearEditText
                    android:id="@+id/cet_special_plane"
                    style="@style/EditTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/custom_input_please"
                    android:singleLine="true"
                    android:textSize="16sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingStart="15dp"
                android:paddingTop="10dp"
                android:paddingEnd="15dp"
                android:paddingBottom="10dp">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="开户行"
                    android:textColor="@color/colorMiddle"
                    android:textSize="16sp" />

                <com.rainwood.tools.wheel.view.ClearEditText
                    android:id="@+id/cet_opening_bank"
                    style="@style/EditTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/custom_input_please"
                    android:inputType="number"
                    android:singleLine="true"
                    android:textSize="16sp"
                    app:regexType="count" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingStart="15dp"
                android:paddingTop="10dp"
                android:paddingEnd="15dp"
                android:paddingBottom="10dp">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="对公账号"
                    android:textColor="@color/colorMiddle"
                    android:textSize="16sp" />

                <com.rainwood.tools.wheel.view.ClearEditText
                    android:id="@+id/cet_brought_account"
                    style="@style/EditTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/custom_input_please"
                    android:singleLine="true"
                    android:textSize="16sp" />

            </LinearLayout>


            <Button
                android:id="@+id/btn_confirm"
                style="@style/ButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:text="确认新建" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>