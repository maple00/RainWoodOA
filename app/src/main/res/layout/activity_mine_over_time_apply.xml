<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:ignore="ContentDescription">

    <include layout="@layout/include_title_bar_none_menu" />

    <View style="@style/HorizontalLineStyle" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:orientation="vertical">

            <!-- 客户类型-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingTop="21dp"
                android:paddingBottom="21dp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tv_obj"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="加班对象"
                    android:textColor="@color/colorMiddle"
                    android:textSize="16sp" />

                <Space
                    android:layout_width="20dp"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatRadioButton
                        android:id="@+id/rb_custom"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:button="@drawable/selector_radiobutton"
                        android:checked="true" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_custom"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="6dp"
                        android:text="客户"
                        android:textColor="@color/fontColor"
                        android:textSize="16sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatRadioButton
                        android:id="@+id/rb_task"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:button="@drawable/selector_radiobutton"
                        android:checked="false" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_task"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="6dp"
                        android:text="任务"
                        android:textColor="@color/fontColor"
                        android:textSize="16sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatRadioButton
                        android:id="@+id/rb_transaction"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:button="@drawable/selector_radiobutton"
                        android:checked="false" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_transaction"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="6dp"
                        android:text="事务"
                        android:textColor="@color/fontColor"
                        android:textSize="16sp" />

                </LinearLayout>

            </LinearLayout>

            <!-- 对象名称-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingTop="21dp"
                android:paddingBottom="21dp"
                android:visibility="gone">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_obj_title"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="对象名称"
                    android:textColor="@color/colorMiddle"
                    android:textSize="16sp" />

                <com.rainwood.tools.wheel.view.ClearEditText
                    android:id="@+id/et_obj"
                    style="@style/EditTextStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="@string/custom_input_please"
                    android:padding="0dp"
                    android:textColor="@color/fontColor"
                    android:textSize="16sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingTop="21dp"
                android:paddingBottom="21dp">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_start_time_title"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="开始时间"
                    android:textColor="@color/colorMiddle"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_start_time"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="选择预计加班开始时间"
                    android:textColor="@color/fontColor"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_right_arrow" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingTop="21dp"
                android:paddingBottom="21dp">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_end_time_title"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="结束时间"
                    android:textColor="@color/colorMiddle"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_end_time"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="选择预计加班结束时间"
                    android:textColor="@color/fontColor"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_right_arrow" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingTop="21dp"
                android:paddingBottom="21dp">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_overtime_reason_title"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="加班事由"
                    android:textColor="@color/colorMiddle"
                    android:textSize="16sp" />

                <com.rainwood.tools.wheel.view.ClearEditText
                    android:id="@+id/et_overtime_reason"
                    style="@style/EditTextStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="@string/custom_input_please"
                    android:padding="0dp"
                    android:textColor="@color/fontColor"
                    android:textSize="16sp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingTop="21dp"
                android:paddingBottom="21dp">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_approver_title"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="审批人"
                    android:textColor="@color/colorMiddle"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_approver"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="@string/text_choose_please"
                    android:textColor="@color/fontColor"
                    android:textSize="16sp" />

            </LinearLayout>

            <Button
                android:id="@+id/btn_commit"
                style="@style/ButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/text_commit" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>


</LinearLayout>