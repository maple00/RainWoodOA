<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- 流式布局-->
    <declare-styleable name="FlowTextStyle">
        <attr name="horizontalSpace" format="dimension" />
        <attr name="verticalSpace" format="dimension" />
    </declare-styleable>

    <!-- 轮播图-->
    <declare-styleable name="AutoLoopStyle">
        <attr name="duration" format="integer" />
    </declare-styleable>

    <!-- 头部状态-->
    <declare-styleable name="StatusTextGroup">
        <attr name="status_text" format="string"/>
        <attr name="text_color" format="color"/>
        <attr name="text_size" format="integer"/>
        <attr name="right_icon" format="reference"/>
    </declare-styleable>

    <!-- icon + text 组合-->
    <declare-styleable name="GroupIconText">
        <attr name="icon" format="reference"/>
        <attr name="text" format="string"/>
        <attr name="spacing" format="integer"/>
        <attr name="textColor" format="color"/>
    </declare-styleable>

    <!-- text + text 组合-->
    <declare-styleable name="GroupTextText">
        <attr name="title" format="string"/>
        <attr name="title_color" format="color"/>
        <attr name="title_size" format="integer"/>
        <attr name="values" format="string"/>
        <attr name="value_color" format="color"/>
        <attr name="value_size" format="integer"/>
        <attr name="endParent" format="boolean"/>
    </declare-styleable>


</resources>